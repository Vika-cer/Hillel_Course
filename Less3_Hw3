using System;
//3) Написати програму, яка виводить назву дня неділі за його номером (1 - понеділок, 7 - неділя)
namespace project
{
    class Program
    {
        static void Main(string[] args)
        {
            int day = OutputNumber("Write the day 1-7 :");
            Programm(day);
            Console.ReadKey();
        }
        static int OutputNumber(string message)
        {
            int result = 0;
            do
            {
                Console.Write(message);
                string input = Console.ReadLine();
                result = int.Parse(input);
            }
            while (result < 1 || result > 7);
            return result;

        }
        static void Programm(int day)
        {
            switch (day)
            {
                case 1:
                    Console.WriteLine("Monday");
                    break;
                case 2:
                    Console.WriteLine("Tuesday");
                    break;
                case 3:
                    Console.WriteLine("Wednesday");
                    break;
                case 4:
                    Console.WriteLine("Thursday");
                    break;
                case 5:
                    Console.WriteLine("Friday");
                    break;
                case 6:
                    Console.WriteLine("Saturday");
                    break;
                case 7:
                    Console.WriteLine("Sunday");
                    break;
                default:
                    Console.WriteLine("Error");
                    break;
            }
        }
    }

}
