using System;
// Написати програму, в якій користувач вводить номер місяця.  Якщо місяць 1,2,12 відображає "Зима";
// 3,4,5 - «Весна»; 6-8 - «Літо»; 9-11 – «Осінь».
// У будь-якому іншому випадку - "Немає такого місяця на цій планеті". 
namespace project
{
    class Program
    {
        static void Main(string[] args)
        {
            int month = OutputNumber("Write the month 1-12 :");
            Programm(month);
            Console.ReadKey();
        }
        static int OutputNumber(string message)
        {
            int result;
            bool resParse = false;
            do
            {
                Console.Write(message);
                string input = Console.ReadLine();
                resParse = int.TryParse(input, out result);
            }
            while (!resParse);
            return result;
        }
            static void Programm(int month)
        {
            if (month == 1 || month == 2 || month == 12)
            {
                Console.WriteLine("Зима");
            }
            else if (month == 3 || month == 4 || month == 5)
            {
                Console.WriteLine("Весна");
            }
            else if (month == 6 || month == 7 || month == 8)
            {
                Console.WriteLine("Літо");
            }
            else if (month == 9 || month == 10 || month == 11)
            {
                Console.WriteLine("Осінь");
            }
            else
            {
                Console.WriteLine("Немає такого місяця на цій планеті");
            }
        }
    }
}
